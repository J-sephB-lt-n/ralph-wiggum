{
  "$schema": "https://opencode.ai/config.json",

  "permission": {
    "read": "allow",
    "edit": "allow",
    "glob": "allow",
    "grep": "allow",
    "list": "allow",
    "bash": "allow",
    "task": "allow",
    "skill": "allow",
    "lsp": "allow",
    "todoread": "allow",
    "todowrite": "allow",
    "webfetch": "deny",
    "websearch": "deny",
    "codesearch": "deny",
    "external_directory": "allow",
    "doom_loop": "deny"
  },

  "provider": {
    "gaiss": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "gaiss",
      "options": {
        "baseURL": "{env:OPENAI_BASE_URL}",
        "apiKey": "{env:OPENAI_API_KEY}"
      },
      "models": {
        "bedrock.anthropic.claude-sonnet-4-5": {
          "name": "Claude Sonnet 4.5"
        },
        "vertex_ai.gemini-3-pro-preview": {
          "name": "Gemini 3 Pro"
        }
      }
    }
  },
  "model": "gaiss/bedrock.anthropic.claude-sonnet-4-5"
}
